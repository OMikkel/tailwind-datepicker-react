{
	"compilerOptions": {
		// Default
		"target": "es5",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		// Added
		"jsx": "react",
		"module": "ESNext",
		"sourceMap": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist/**/*"]
}
